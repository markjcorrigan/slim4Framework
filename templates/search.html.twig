{% include 'header.twig' %}

<h1>Search forms</h1>
<p>Search for Artist</p>
<form method="post">
    <input type="text" name="q" aria-label="Search query" value="{{query}}">
    <button>Search</button>
</form>


<div class="albums">
    {% for record in records %}
        <div>
            <h2>{{ record.title|e }}</h2>
            <p>{{ record.artist|e }}</p>
        </div>
    {% endfor %}
</div>

